<h1 class="ls-title-intro ls-ico-home">Bem Vindo, <%= current_user.email %></h1>

<div class="ls-box">
  <% if @posts.any? %>
  <h4>Suas postagens</h4>
    <table class="ls-table">
      <thead>
        <tr>
          <th>Título</th>
          <th>Data</th>
          <th class="hidden-xs">Info</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td><%= post.formated_data %></td>
            <td><%= link_to 'Detalhes', post, class: 'ls-btn' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
  <p>Você não possui postagens</p>
  <% end %>
</div>
