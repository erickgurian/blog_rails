<br>
<br>
<div class="card" style="width: 40rem;">
    <% if user_signed_in? && post.author?(current_user) %>
    <div class="card-header">
      <p style="margin-left: 470px; text-decoration: none;"><%= link_to 'Editar', edit_post_path(post) %>
      <i class="fas fa-edit"></i>
      <%= link_to 'Apagar', post_path(post), method: :delete,
              data: { confirm: 'Tem certeza?' } %>
      <i class="fas fa-times-circle"></i></p>
      </div>
    <% end %>
  <div class="card-body">
    <h4 class="card-title"><b><%= post.title %></b></h4>
    <br>
    <h6 class="card-subtitle mb-2 text-muted">Data: <%= post.formated_data %></h6>
    <br>
    <pre>
      <p class="card-text" style="font-size: 16px;"><%= post.body %></p>
    </pre>
    <br>
    <p>Por: <%= post.user.email %></p>
    <strong><p>Categorias:</strong>
      <% if post.categories.any? %>
      <div class="row no-gutter">
        <% post.categories.each do |category| %>
          <p class="card inline" style="width: 7rem; padding: 5px; text-align: center">
            <%= category.name %></p>
        <% end %>
      </div>
      <% else %>
        <p>Nenhuma categoria selecionada</p>
      <% end %>
    </p>
  </div>
</div>
